<div class="container">
  <h1>URL shortener</h1>
  <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt="">
  <form action="/shorten" method="POST">

  {{#unless token}}
  <input type="text" required placeholder="輸入網址" name="url">
  <input type="submit">
  {{/unless}}

  
</form>
  {{#if token}}
    <h2>Success! Please use the link:</h2>
    <a href="http://localhost:3030/shorten/{{token}}">localhost:3030/shorten/{{token}}</a>
    <button>copy</button>
  {{/if}}
</div>

